        <script>
            let sortDirection = {
                price: 'asc',
                rating: 'asc'
            };
        
            function searchTable() {
                const searchValue = document.getElementById('searchInput').value.toLowerCase();
                const rows = document.querySelectorAll('#dataTable tbody tr');
                let visibleCount = 0;
        
                rows.forEach(row => {
                    const cells = row.getElementsByTagName('td');
                    let found = false;
        
                    for (let i = 0; i < cells.length; i++) {
                        if (cells[i].textContent.toLowerCase().includes(searchValue)) {
                            found = true;
                            break;
                        }
                    }
        
                    if (found) {
                        row.style.display = '';
                        visibleCount++;
                    } else {
                        row.style.display = 'none';
                    }
                });
        
                document.getElementById('entryCount').textContent = `${visibleCount} entries found`;
            }
        
            function sortTable(column) {
                const table = document.getElementById('dataTable');
                const tbody = table.querySelector('tbody');
                const rows = Array.from(tbody.querySelectorAll('tr'));
                const direction = sortDirection[column];
        
                rows.sort((a, b) => {
                    const aText = a.querySelector(`td:nth-child(${getColumnIndex(column)})`).textContent.trim();
                    const bText = b.querySelector(`td:nth-child(${getColumnIndex(column)})`).textContent.trim();
        
                    if (column === 'price' || column === 'rating') {
                        return direction === 'asc' 
                            ? parseFloat(aText) - parseFloat(bText) 
                            : parseFloat(bText) - parseFloat(aText);
                    }
                });
        
                rows.forEach(row => tbody.appendChild(row));
        
                // Toggle sort direction for next click
                sortDirection[column] = direction === 'asc' ? 'desc' : 'asc';
        
                // Update sort icons
                updateSortIcons(column);
            }
        
            function getColumnIndex(column) {
                switch (column) {
                    case 'price':
                        return 2; // Assuming Price is the 2nd column
                    case 'rating':
                        return 3; // Assuming Rating is the 3rd column
                    default:
                        return 1;
                }
            }
        
            function updateSortIcons(column) {
                document.querySelectorAll('.sort-icon').forEach(icon => {
                    icon.classList.remove('asc', 'desc');
                });
        
                const activeIcon = document.querySelector(`th:contains('${capitalizeFirstLetter(column)}') .sort-icon`);
                if (activeIcon) {
                    activeIcon.classList.add(sortDirection[column]);
                }
            }
        
            function capitalizeFirstLetter(string) {
                return string.charAt(0).toUpperCase() + string.slice(1);
            }
        
            document.addEventListener('DOMContentLoaded', () => {
                searchTable();
            });
